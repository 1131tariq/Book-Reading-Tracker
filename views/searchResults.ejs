<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Search Results</h1>
    <ul>
        <% results.forEach(result => { %>
            <li>
                <img src="<%= result.image %>" alt="<%= result.title %>">
                <strong><%= result.title %></strong> by <%= result.author %>
                <form action="/add" method="POST">
                    <input type="hidden" name="title" value="<%= result.title %>">
                    <input type="hidden" name="author" value="<%= result.author %>">
                    <input type="hidden" name="key" value="<%= result.key %>">
                    <input type="hidden" name="image" value="<%= result.image %>">
                    <label for="ratings">Rating:</label>
                    <input type="number" id="ratings" name="ratings" step="0.1" min="0" max="5" required>
                    <button type="submit">Add to My Books</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/">Back to Home</a>
</body>
</html>
